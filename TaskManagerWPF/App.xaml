<Application x:Class="TaskManagerWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskManagerWPF.Converters">
    <Application.Resources>
        <local:EmptyStringToVisibilityConvert x:Key="EmptyStringToVisibilityConvert" />
        <Style TargetType="Button">
             <Setter Property="Background" Value="#e1bfb0"/>
         </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <Style TargetType="Control">
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>
    </Application.Resources>
</Application>
