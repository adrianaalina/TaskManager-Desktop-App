<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:models="clr-namespace:TaskManagerWPF.Models"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TEXTBOX STYLE -->
    <Style TargetType="TextBox">
        <Setter Property="Height" Value="28"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style TargetType="TextBox" x:Key="HintTextBox">
        <Setter Property="Padding" Value="6"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Bd"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"/>

                            <ScrollViewer x:Name="PART_ContentHost"/>

                            <TextBlock x:Name="Hint"
                                       Text="{TemplateBinding Tag}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}}" Value="0">
                            <Setter TargetName="Hint" Property="Visibility" Value="Visible"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}}" Value="1">
                                <Setter TargetName="Hint" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Hint" Property="Visibility" Value="Collapsed"/>
                            </Trigger>


                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
        </Setter>
    </Style>
    
    

    <!-- COMBOBOX STYLE -->
    <Style TargetType="ComboBox">
        <Setter Property="Height" Value="28"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- DATEPICKER STYLE -->
    <Style TargetType="DatePicker">
        <Setter Property="Height" Value="28"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- BUTTON STYLE -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Padding" Value="12,5"/>
        <Setter Property="Background" Value="#C2A58A"/>
        <Setter Property="BorderBrush" Value="#C79B2A"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <!-- LISTBOX STYLE -->
    <!-- Expender style -->
    <DataTemplate DataType="{x:Type models:TaskModel}">
    
        <Border Width="350" 
                Margin="6"
                BorderThickness="1"
                CornerRadius="10"
                Padding="4">

            <Border.Style>
                <Style TargetType="Border">
                    
                    <Style.Triggers>

                        <!-- intarziat -->
                        <DataTrigger Binding="{Binding EsteIntarziat}" Value="True">
                            <Setter Property="Background" Value="#6B4E3D"/>
                        </DataTrigger>

                        <!-- azi -->
                        <DataTrigger Binding="{Binding EsteAzi}" Value="True">
                            <Setter Property="Background" Value="#E6D7C8"/>
                        </DataTrigger>

                    </Style.Triggers>

                </Style>
            </Border.Style>
            <Expander Padding="10"
                      IsExpanded="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}">

                <!-- HEADER -->
                <Expander.Header>
                    <TextBlock Text="{Binding Titlu}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F3640"/>
                </Expander.Header>

                <!-- CONTENT -->
                <StackPanel Margin="5,10,0,5">

                    <TextBlock Text="{Binding Descriere}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Deadline: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Deadline, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Categorie: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Categorie}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Prioritate: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Prioritate}"/>
                    </StackPanel>

                </StackPanel>

            </Expander>
        </Border>

    </DataTemplate>
    
    <!-- List  style -->
    <Style TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

</ResourceDictionary>